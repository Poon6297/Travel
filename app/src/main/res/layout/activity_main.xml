<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Where do you want to go?"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_china"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/china"
            android:layout_weight="1"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/iv_japan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/japan"
            android:layout_weight="1"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_malaysia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/malaysia"
            android:layout_weight="1"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/iv_cambodia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/cambodia"
            android:layout_weight="1"
            android:onClick="onClick"/>
    </LinearLayout>

</LinearLayout>